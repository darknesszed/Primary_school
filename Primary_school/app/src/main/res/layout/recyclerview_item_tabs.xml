<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shouyelinerbg"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <com.example.primary_school.circleimageview.RadiuImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image_viedo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/dlrb"
        android:scaleType="centerCrop"
        app:radius="10dp"/>

    <TextView
        android:id="@+id/text_videotitle"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="同步语文"
        android:textColor="@color/black"
        android:textSize="14dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/text_videonum"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频·2000次播放 "
            android:textColor="#cccfff"
            android:textSize="10dp"/>
        <ImageButton
            android:layout_marginRight="8dp"
            android:background="@drawable/snagedian"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#FFF0F5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <Button
                    android:id="@+id/btn_yuwen"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/jpkbtnbg"
                    android:text="语文"
                    android:textSize="15dp"
                    style="?attr/borderlessButtonStyle"
                />
                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btn_shuxue"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/jpkbtnbg"
                    android:text="数学"
                    android:textSize="15dp"
                    style="?attr/borderlessButtonStyle"
                    />
                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btn_english"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/jpkbtnbg"
                    android:text="英语"
                    android:textSize="15dp"
                    style="?attr/borderlessButtonStyle"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/shape5"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|enterAlways">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/dianzan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="邀请小伙伴一起学习赠送免费课"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/jpkbtn_yaoqing"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="去邀请>"
                    android:textColor="#ff383f" />
            </LinearLayout>

            <GridLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud"
                android:columnCount="2">

                <LinearLayout
                    android:layout_height="30dp"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:drawableLeft="@drawable/aixin"
                        android:gravity="center_vertical"
                        android:text="提升课"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:hint="适合成绩70-90分以上的同学"
                        android:paddingLeft="5dp"
                        android:textSize="14dp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_height="128dp"
                    android:layout_width="128dp"
                    android:layout_rowWeight="1"
                    android:layout_rowSpan="4"
                    android:background="@drawable/jxkbgimg1"
                   >
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_height="100dp"
                        android:layout_width="64dp"
                        android:text="难度3星"
                        android:drawableBottom="@drawable/nandu3"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="四年级数学提升课"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="名师主讲+辅导老师，打牢数学基础"
                    android:textSize="15dp"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="难度：中等"
                        android:textSize="14dp"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:background="@drawable/jpkbtnbg"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="吃透课本"
                        />
                    <Button
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jpkbtnbg"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="夯实基础"
                        />
                </LinearLayout>
            </GridLayout>
            <GridLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud"
                android:columnCount="2">

                <LinearLayout
                    android:layout_height="30dp"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:drawableLeft="@drawable/aixin"
                        android:gravity="center_vertical"
                        android:text="尖子课"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:hint="适合成绩90分以上的同学"
                        android:paddingLeft="5dp"
                        android:textSize="14dp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_height="128dp"
                    android:layout_width="128dp"
                    android:layout_rowWeight="1"
                    android:layout_rowSpan="4"
                    android:background="@drawable/jxkbgimg2"
                  >
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_height="100dp"
                        android:layout_width="64dp"
                        android:text="难度4星"
                        android:drawableBottom="@drawable/nandu4"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="四年级数学尖子课"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="名师主讲+辅导老师，打牢数学基础"
                    android:textSize="15dp"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="难度：较难"
                        android:textSize="14dp"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"/>
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:background="@drawable/jpkbtnbg"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="突破难点"
                        />
                    <Button
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jpkbtnbg"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="方法延伸"
                        />
                </LinearLayout>
            </GridLayout>
            <GridLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud"
                android:columnCount="2">

                <LinearLayout
                    android:layout_height="30dp"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:drawableLeft="@drawable/aixin"
                        android:gravity="center_vertical"
                        android:text="冲顶课"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:hint="适合成绩95分以上的同学"
                        android:paddingLeft="5dp"
                        android:textSize="14dp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_height="128dp"
                    android:layout_width="128dp"
                    android:layout_rowWeight="1"
                    android:layout_rowSpan="4"
                    android:layout_gravity="fill"
                    android:background="@drawable/jxkbgimg3"
                    >
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_height="100dp"
                        android:layout_width="64dp"
                        android:text="难度5星"
                        android:drawableBottom="@drawable/nandu5"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="四年级数学冲顶课"
                    android:textSize="20dp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:text="名师主讲+辅导老师，打牢数学基础"
                    android:textSize="15dp"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="难度：困难"
                        android:textSize="14dp"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/xingxing"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:background="@drawable/jpkbtnbg"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="深度探究"
                        />
                    <Button
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jpkbtnbg"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="思维拓展"
                        />
                </LinearLayout>
            </GridLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:drawableLeft="@drawable/aixin"
                    android:gravity="center_vertical"
                    android:text="寒暑课"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:hint="轻松领跑新学期"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <RelativeLayout
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgroud"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <com.example.primary_school.circleimageview.RadiuImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hskbiankuang"
                        android:scaleType="centerCrop"
                        app:radius="10dp"/>
                    <TextView
                        android:id="@+id/hjtext1"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="四升五\n寒假预习课"
                        android:textSize="15dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/hjtext2"
                        android:layout_below="@+id/hjtext1"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:hint="通用版"
                        android:textSize="13dp"
                        android:textColorHint="#D8D6D6"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/xuehua"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/hjtext3"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/hjtext2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="关注重点难点，提分更有效"
                        android:textSize="12dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/hjtext4"
                        android:layout_marginLeft="5dp"
                        android:layout_below="@+id/hjtext3"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="限时免费"
                        android:textSize="14dp"
                        android:textColor="@color/pr_red"/>
                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_below="@+id/hjtext3"
                        android:layout_toRightOf="@+id/hjtext4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7,125人已学"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:textColor="#9B9A9A"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgroud"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <com.example.primary_school.circleimageview.RadiuImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hskbiankuang2"
                        android:scaleType="centerCrop"
                        app:radius="10dp"/>
                        <TextView
                            android:id="@+id/hjtext5"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="四升五\n寒假预习课"
                            android:textSize="15dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/hjtext6"
                            android:layout_below="@+id/hjtext5"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:hint="通用版"
                            android:textSize="13dp"
                            android:textColorHint="#D8D6D6"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/huoyan"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/hjtext7"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/hjtext6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="关注重点难点，提分更有效"
                            android:textSize="12dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/hjtext8"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@+id/hjtext7"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="限时免费"
                            android:textSize="14dp"
                            android:textColor="@color/pr_red"/>
                        <TextView
                            android:layout_marginTop="7dp"
                            android:gravity="center"
                            android:layout_below="@+id/hjtext7"
                            android:layout_toRightOf="@+id/hjtext8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="6,355人已学"
                            android:textSize="12dp"
                            android:textColor="#9B9A9A"/>
                    </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
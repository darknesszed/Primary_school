<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FC">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <Button
            android:id="@+id/lianxibtn_yuwen"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/jpkbtnbg"
            android:text="语文"
            android:textSize="15dp"
            style="?attr/borderlessButtonStyle"
            />
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/lianxibtn_shuxue"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/jpkbtnbg"
            android:text="数学"
            android:textSize="15dp"
            style="?attr/borderlessButtonStyle"
            />
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/lianxibtn_english"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/jpkbtnbg"
            android:text="英语"
            android:textSize="15dp"
            style="?attr/borderlessButtonStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_lianxi"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="当前版本：人教版 数学"
            android:gravity="center"
            android:textSize="15dp"
            />
        <Button
            android:background="@drawable/et"
            android:layout_marginLeft="10dp"
            android:id="@+id/text_pupomeun"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/xiala"
            android:gravity="center"
            android:textSize="15dp"
            android:text="四年级下"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_lianxi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
</androidx.core.widget.NestedScrollView>